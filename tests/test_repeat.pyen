'''testing repeat'''

def test_repeat_n():
    x = 0
    repeat 4:
        x += 1
    assert x==4


def test_repeat_until():
    x = 4
    y = 0
    repeat until y == 4:
        x -= 1
        y += 1
    assert x == 0


def test_repeat_while():
    y = 0
    x = 0
    repeat while x == 0:
        y += 1
        if y == 2:
            x = 1
    assert x == 1
    assert y == 2
    

def test_repeat_forever():
    x = 0
    repeat forever:
       x += 1
       if x == 3:
           break
    assert x == 3

if __name__ == '__main__':
    test_repeat_forever()
    test_repeat_while()
    test_repeat_until()
    test_repeat_n()
    print("Success from test_repeat.pyen!")