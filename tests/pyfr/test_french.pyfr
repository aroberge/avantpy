''' Just testing a small subset of all the French syntax '''

de math importer pi

définir test_bool():
    affirmer Vrai, "Vrai is True"
    affirmer pas Faux, "Faux is False"

définir test_for():
    total = 0
    pour i dans intervalle(10):
        total += i
    affirmer total == 45

définir test_si_else():
    si Vrai:
        x = 0
    sinon:
        x = 1
    affirmer x == 0

définir test_if_sinon():
    si Vrai:
        x = 0
    sinon:
        x = 1
    affirmer x == 0

définir main():
    test_bool()
    test_for()
    test_si_else()
    test_if_sinon()
    afficher("Success.")

si pasimporté:
    main()
    bonjour = 'Bonjour tout le monde !'  # for console example
