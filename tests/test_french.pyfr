''' Just testing a small subset of all the French syntax '''

de math importer pi

def test_bool():
    affirmer Vrai, "Vrai is True"
    assert not Faux, "Faux is False"

def test_for():
    total = 0
    pour i dans intervalle(10):
        total += i
    assert total == 45

def test_si_else():
    si Vrai:
        x = 0
    else:
        x = 1
    assert x == 0

def test_if_sinon():
    if True:
        x = 0
    sinon:
        x = 1
    assert x == 0

def main():
    test_bool()
    test_for()
    test_si_else()
    test_if_sinon()
    afficher("Success.")

