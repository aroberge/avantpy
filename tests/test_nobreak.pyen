'''Testing nobreak keyword.

'''

def test_for_nobreak():
    x = 0
    for i in range(3):
        x += 1
    nobreak:
        x = 0
    assert x == 0

def test_while_nobreak():
    x = 0
    while True:
        x = 2
        break
    nobreak:
        x = 0
    assert x == 2

def test_nobreak_else(capsys):
    from . import nobreak_syntax_error
    if not hasattr(nobreak_syntax_error, "out"):
        info = str(capsys.readouterr())
        nobreak_syntax_error.out = info
    assert 'NobreakSyntaxError' in nobreak_syntax_error.out

if notimported:
    test_for_nobreak()
    test_while_nobreak()
    print("Success from test_nobreak.pyen!")
