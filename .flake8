[flake8]
max-line-length = 88
exclude =
    # No need to traverse our git directory
    .git/*,
    # There's no value in checking cache directories
    __pycache__,
    # documentation, to be ignored
    docs/*,
    images/*,
    psf/*,
    # This contains our tests directory
    tests/*,
    # the following is for quick local tests
    z/*,
    # ignore this tool
    update_tb*
